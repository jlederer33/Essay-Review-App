<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.SelectedEssayFragment">

    <TextView
        android:id="@+id/selectedEssayTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Title"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/selectedEssayText"
        android:layout_width="364dp"
        android:layout_height="238dp"
        android:text="Text"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selectedEssayTitle" />

    <Button
        android:id="@+id/backToUserEssays"
        android:layout_width="164dp"
        android:layout_height="42dp"
        android:layout_marginTop="28dp"
        android:text="User Essays"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.892"
        app:layout_constraintStart_toStartOf="@+id/addReviewButton"
        app:layout_constraintTop_toBottomOf="@+id/backToAllEssays" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewReviews"
        android:layout_width="381dp"
        android:layout_height="247dp"
        android:layout_marginTop="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selectedEssayText" />

    <Button
        android:id="@+id/addReviewButton"
        android:layout_width="187dp"
        android:layout_height="46dp"
        android:layout_marginTop="24dp"
        android:text="Add Review"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.066"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/submitToAllEssays" />

    <Button
        android:id="@+id/submitToAllEssays"
        android:layout_width="190dp"
        android:layout_height="48dp"
        android:layout_marginTop="52dp"
        android:text="Submit to All Essays"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.072"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recyclerViewReviews" />

    <Button
        android:id="@+id/backToAllEssays"
        android:layout_width="166dp"
        android:layout_height="46dp"
        android:layout_marginTop="52dp"
        android:text="All Essays"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.906"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recyclerViewReviews" />

</androidx.constraintlayout.widget.ConstraintLayout>